{
	"name": "artbrushlens",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently \"npm run dev:main\" \"npm run dev:admin\"",
		"dev:main": "npm run dev --workspace=@artbrushlens/main",
		"dev:admin": "npm run dev --workspace=@artbrushlens/admin",
		"build:main": "npm run build --workspace=@artbrushlens/main",
		"build:admin": "npm run build --workspace=@artbrushlens/admin",
		"clean:all": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist && rm -rf apps/main/node_modules && rm -rf apps/admin/node_modules",
		"test": "npm run test:main && npm run test:admin && npm run test:shared",
		"test:main": "npm run test --workspace=@artbrushlens/main",
		"test:admin": "npm run test --workspace=@artbrushlens/admin",
		"docker:build": "docker-compose build",
		"docker:build:main": "docker-compose build main-app",
		"docker:up": "docker-compose up -d",
		"docker:up:main": "docker-compose up -d main-app",
		"docker:down": "docker-compose down",
		"docker:prune": "docker system prune -a --volumes && docker builder prune --all",
		"supabase:start": "supabase start",
		"supabase:stop": "supabase stop",
		"lint": "npm run lint:admin && npm run lint:main && npm run lint:shared",
		"lint:admin": "npm run lint --workspace=@artbrushlens/admin",
		"lint:main": "npm run lint --workspace=@artbrushlens/main",
		"postinstall": "pnpm run -r --filter './packages/**' build && npm run -r build:main && npm run -r build:admin "
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"@artbrushlens/api-fetchers": "*",
		"@artbrushlens/api-handlers": "*",
		"@artbrushlens/shared-types": "*",
		"@artbrushlens/react-query-hooks": "*",
		"@artbrushlens/palette-studio": "*"
	}
}
