{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"target": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@artbrushlens/api-handlers/*": ["packages/api-handlers/src/*"],
			"@artbrushlens/api-fetchers/*": ["packages/api-fetchers/src/*"],
			"@artbrushlens/shared-types/*": ["packages/shared-types/src/*"],
			"@artbrushlens/palette-studio/*": ["packages/palette-studio/src/*"],
			"@artbrushlens/react-query-hooks/*": ["packages/react-query-hooks/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"strictNullChecks": true
	},
	"include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
